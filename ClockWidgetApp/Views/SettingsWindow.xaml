                        <Button Content="{Binding Localized.Timers_ActivateAll}" ToolTip="{Binding Localized.Timers_ActivateAll}"/>
                    </StackPanel>
                </StackPanel>

                <!-- === ÐÐ°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ¸ Ð²Ð¸Ð´Ð¶ÐµÑ‚Ð° === -->
