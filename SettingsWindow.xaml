<Window x:Class="ClockWidgetApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockWidgetApp"
        xmlns:helpers="clr-namespace:ClockWidgetApp.Helpers"
        mc:Ignorable="d"
        Title="Настройки виджета" 
        Height="380" 
        Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">
    <StackPanel Margin="10">
        <!-- Прозрачность фона -->
        <TextBlock Text="Видимость фона:" 
                   Margin="0,0,0,5"/>
        
        <Slider x:Name="BackgroundOpacitySlider" 
                Minimum="{x:Static helpers:Constants.MIN_WINDOW_OPACITY}" 
                Maximum="{x:Static helpers:Constants.MAX_WINDOW_OPACITY}" 
                Value="{Binding BackgroundOpacity, Mode=TwoWay}"
                TickFrequency="{x:Static helpers:Constants.OPACITY_STEP}"
                IsSnapToTickEnabled="True"
                IsMoveToPointEnabled="True"/>
        
        <TextBlock x:Name="BackgroundOpacityValueText" 
                   Text="{Binding BackgroundOpacity, StringFormat='{}{0:P0}'}"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <!-- Прозрачность текста -->
        <TextBlock Text="Видимость текста:" 
                   Margin="0,0,0,5"/>
        
        <Slider x:Name="TextOpacitySlider" 
                Minimum="{x:Static helpers:Constants.MIN_TEXT_OPACITY}" 
                Maximum="{x:Static helpers:Constants.MAX_TEXT_OPACITY}" 
                Value="{Binding TextOpacity, Mode=TwoWay}"
                TickFrequency="{x:Static helpers:Constants.OPACITY_STEP}"
                IsSnapToTickEnabled="True"
                IsMoveToPointEnabled="True"/>
        
        <TextBlock x:Name="TextOpacityValueText" 
                   Text="{Binding TextOpacity, StringFormat='{}{0:P0}'}"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <!-- Размер шрифта -->
        <TextBlock Text="Размер шрифта:" 
                   Margin="0,0,0,5"/>
        
        <Slider x:Name="FontSizeSlider" 
                Minimum="{x:Static helpers:Constants.MIN_FONT_SIZE}" 
                Maximum="{x:Static helpers:Constants.MAX_FONT_SIZE}" 
                Value="{Binding FontSize, Mode=TwoWay}"
                TickFrequency="{x:Static helpers:Constants.FONT_SIZE_STEP}"
                IsSnapToTickEnabled="True"/>
        
        <TextBlock x:Name="FontSizeValueText" 
                   Text="{Binding FontSize, StringFormat='{}{0:F0}px'}"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <!-- Чекбокс отображения секунд -->
        <CheckBox x:Name="ShowSecondsCheckBox"
                  Content="Показывать секунды"
                  IsChecked="{Binding ShowSeconds, Mode=TwoWay}"
                  Margin="0,10,0,10"/>

        <!-- Кнопка закрытия -->
        <Button x:Name="CloseWidgetButton" 
                Content="Закрыть виджет" 
                Margin="0,10,0,0"
                Padding="10,5"
                Click="CloseWidgetButton_Click"/>
    </StackPanel>
</Window> 