<Window x:Class="ClockWidgetApp.Views.TimerNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:ClockWidgetApp.Helpers"
        Title="{Binding TitleText}"
        Height="Auto" MinWidth="280" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Topmost="True"
        Background="White">
    <!-- Окно оповещения о сработавшем таймере или будильнике -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок -->
        <TextBlock x:Name="TitleTextBlock"
                   Grid.Row="0"
                   Text="{Binding TitleText}"
                   FontWeight="Bold"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,6"/>
        <!-- Имя таймера -->
        <TextBlock x:Name="NameLineTextBlock"
                   Grid.Row="1"
                   Text="{Binding NameLine}"
                   FontWeight="Bold"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,4"/>
        <!-- Время сработавшего таймера -->
        <TextBlock x:Name="TimeLineTextBlock"
                   Grid.Row="2"
                   Text="{Binding TimeLine}"
                   TextWrapping="Wrap"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        <!-- Кнопка Stop -->
        <Button x:Name="StopButton"
                Grid.Row="3"
                Content="{Binding Localized.TimerNotification_StopButton}"
                Width="100"
                Height="32"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Command="{Binding StopCommand}"/>
    </Grid>
</Window> 