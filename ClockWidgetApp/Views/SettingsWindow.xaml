                    </ItemsControl>
                    <!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸ ÑƒÐ¿Ñ€Ð°Ð²Ð»ÐµÐ½Ð¸Ñ Ñ‚Ð°Ð¹Ð¼ÐµÑ€Ð°Ð¼Ð¸ -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed">
                        <Button Content="{Binding Localized.Timers_DisableAll}" Margin="0,0,5,0" ToolTip="{Binding Localized.Timers_DisableAll}"/>
                        <Button Content="{Binding Localized.Timers_DeleteAll}" Margin="0,0,5,0" ToolTip="{Binding Localized.Timers_DeleteAll}"/>
                        <Button Content="{Binding Localized.Timers_ActivateAll}" ToolTip="{Binding Localized.Timers_ActivateAll}"/>
                    </StackPanel>
