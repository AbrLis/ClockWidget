<Window x:Class="ClockWidgetApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockWidgetApp"
        xmlns:helpers="clr-namespace:ClockWidgetApp.Helpers"
        mc:Ignorable="d"
        Title="{Binding Localized.MainWindow_Title}" 
        Height="450" 
        Width="800"
        Icon="/Resources/Icons/app_ico_32.ico"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowActivated="True"
        WindowStartupLocation="Manual">
    <Window.Resources>
        <BitmapImage x:Key="WindowIcon" UriSource="/Resources/Icons/app_ico_32.ico"/>
    </Window.Resources>
    <Grid>
        <Border x:Name="BackgroundBorder" 
                Background="Black" 
                Opacity="{Binding BackgroundOpacity}"/>
        <TextBlock x:Name="TimeTextBlock" 
                   Text="{Binding TimeText}"
                   Foreground="White" 
                   FontSize="{Binding FontSize}"
                   FontFamily="Segoe UI"
                   Margin="20"
                   Opacity="{Binding TextOpacity}"/>
    </Grid>
</Window>
