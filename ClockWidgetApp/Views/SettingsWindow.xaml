                                        <TextBlock Text="00:10:00" FontSize="15" VerticalAlignment="Center" ToolTip="{Binding DataContext.Localized.Timers_Time, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        <!-- Ð˜ÐºÐ¾Ð½ÐºÐ¸ ÑƒÐ¿Ñ€Ð°Ð²Ð»ÐµÐ½Ð¸Ñ -->
