                <StackPanel Grid.Row="2" Margin="0,10,0,10">
                    <TextBlock Text="{Binding Localized.Alarms_Title}" FontWeight="Bold" FontSize="16"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                        <Button Content="+" Width="28" Height="28" ToolTip="{Binding Localized.Alarms_Add}"/>
                    </StackPanel>
                    <!-- Ð¡Ð¿Ð¸ÑÐ¾Ðº Ð±ÑƒÐ´Ð¸Ð»ÑŒÐ½Ð¸ÐºÐ¾Ð² -->
                    <ItemsControl x:Name="AlarmsList" Margin="0,10,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6" BorderThickness="2" BorderBrush="#FFB3E5FC" Margin="0,0,0,8" Background="#FFE3F2FD">
                                    <DockPanel VerticalAlignment="Center" Margin="6">
                                        <!-- Ð’Ñ€ÐµÐ¼Ñ Ð±ÑƒÐ´Ð¸Ð»ÑŒÐ½Ð¸ÐºÐ° -->
                                        <TextBlock Text="06:45" FontSize="15" VerticalAlignment="Center" ToolTip="{Binding DataContext.Localized.Alarms_Time, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        <!-- Ð˜ÐºÐ¾Ð½ÐºÐ¸ ÑƒÐ¿Ñ€Ð°Ð²Ð»ÐµÐ½Ð¸Ñ -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" >
                                            <Button Content="ðŸ—‘ï¸" Width="28" Height="28" Margin="4,0" ToolTip="{Binding DataContext.Localized.Alarms_Delete, RelativeSource={RelativeSource AncestorType=Window}}" Visibility="Collapsed"/>
                                            <Button Content="ðŸ‘ï¸" Width="28" Height="28" Margin="4,0" ToolTip="{Binding DataContext.Localized.Alarms_Status, RelativeSource={RelativeSource AncestorType=Window}}" Visibility="Collapsed"/>
                                            <Button Content="ðŸ””" Width="28" Height="28" Margin="4,0" ToolTip="{Binding DataContext.Localized.Alarms_Enable, RelativeSource={RelativeSource AncestorType=Window}}" Visibility="Collapsed"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸ ÑƒÐ¿Ñ€Ð°Ð²Ð»ÐµÐ½Ð¸Ñ Ð±ÑƒÐ´Ð¸Ð»ÑŒÐ½Ð¸ÐºÐ°Ð¼Ð¸ -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed">
                        <Button Content="{Binding Localized.Timers_DisableAll}" Margin="0,0,5,0" ToolTip="{Binding Localized.Timers_DisableAll}"/>
