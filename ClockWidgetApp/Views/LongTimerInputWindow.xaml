<Window x:Class="ClockWidgetApp.Views.LongTimerInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор даты и времени" Width="320" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow" Topmost="True" SizeToContent="Height">
    <!-- Окно для выбора даты и времени длинного таймера (всегда поверх всех окон) -->
    <StackPanel Margin="16">
        <TextBlock Text="Выберите дату срабатывания:" FontWeight="Bold" Margin="0,0,0,8"/>
        <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}" Margin="0,0,0,12"/>
        <TextBlock Text="Время (ч:м:с):" FontWeight="Bold" Margin="0,0,0,4"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBox Width="32" Text="{Binding SelectedHour, Mode=TwoWay}" MaxLength="2" Margin="0,0,4,0" HorizontalContentAlignment="Center" LostFocus="TimeBox_LostFocus" Tag="Hour"/>
            <TextBlock Text=":" VerticalAlignment="Center"/>
            <TextBox Width="32" Text="{Binding SelectedMinute, Mode=TwoWay}" MaxLength="2" Margin="4,0,4,0" HorizontalContentAlignment="Center" LostFocus="TimeBox_LostFocus" Tag="Minute"/>
            <TextBlock Text=":" VerticalAlignment="Center"/>
            <TextBox Width="32" Text="{Binding SelectedSecond, Mode=TwoWay}" MaxLength="2" Margin="4,0,0,0" HorizontalContentAlignment="Center" LostFocus="TimeBox_LostFocus" Tag="Second"/>
        </StackPanel>
        <TextBlock Text="Название таймера:" FontWeight="Bold" Margin="0,12,0,4"/>
        <TextBox Text="{Binding TimerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="64" PreviewTextInput="TimerNameBox_PreviewTextInput"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="60" Margin="0,0,8,0" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="60" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window> 