                                            <Button Content="ðŸ—‘ï¸" Width="28" Height="28" Margin="4,0" ToolTip="{Binding DataContext.Localized.Timers_Delete, RelativeSource={RelativeSource AncestorType=Window}}" Visibility="Collapsed"/>
